<div class="contenedor">
	<h1><%= nombrePagina %></h1>
	<% if (meetis.length) { %>
	<div class="grid columnas-md-3">
		<% meetis.forEach(meeti => { %>
		<div class="card">
			<% if (meeti.grupo.imagen) { %>
			<img src="/img/imagen1.jpg" />
			<% } else { %>
			<img src="/img/logo.png" alt="" />
			<% } %>
			<div class="card-texto">
				<p class="fecha"><%= meeti.fecha %> </p>
				<a href="#">
					<h3><%= meeti.titulo %> </h3>
				</a>
				<div class="info-autor">
                    <div class="imagen">
                        <% if (meeti.usuario.imagen) { %>
                            <img src="/uploads/perfiles/<%= meeti.usuario.imagen %>" alt="">
                        <% } %> 
                    </div>
					<div class="informacion">
						<p>Organizado por:</p>
						<p class="autor"><%= meeti.usuario.nombre %> </p>
					</div>
				</div>
			</div>
		</div>
		<% }) %>
	</div>
	<% } else { %>
	<p>No hay Resultados</p>
	<% } %>
</div>
