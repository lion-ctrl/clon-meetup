<main class="contenedor contenedor-formularios no-padding">
    <h1><%- nombrePagina %></h1>

    <form class="default-form" action="/editar-password" method="POST">
        <div class="campo">
            <label>Contraseña Anterior</label>
            <input type="password" name="anterior" placeholder="Introduce tu Contraseña Actual">
        </div>
        <div class="campo">
            <label>Nueva Contraseña</label>
            <input type="password" name="nueva" placeholder="Nueva Contraseña">
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Cambiar Contraseña">
        </div>
    </form>
</main>
