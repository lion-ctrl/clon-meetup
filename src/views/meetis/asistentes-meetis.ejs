<main class="contenedor asistentes">
    <h1><%= nombrePagina %> </h1>
    <% if(asistentes.length) { %>
        <ul class="listado-asistentes">
            <% asistentes.forEach(asistente => { %>
                <li class="comentario">
                    <div class="imagen">
                        <% if (asistente.imagen) { %>
                            <img src="/uploads/perfiles/<%= asistente.imagen %>" alt="">    
                        <%} %> 
                    </div>
                    <div class="texto">
                        <%= asistente.nombre %> 
                    </div>
                </li>
            <% }) %> 
        </ul>
    <% } else { %>
        <p class="no-asistentes">No hay Asistentes</p>
    <% } %> 
</main>