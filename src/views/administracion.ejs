<main class="contenedor panel-administracion">
    <h1><%= nombrePagina %> </h1>

    <div class="contenedor-botones">
        <a href="/nuevo-grupo" class="btn btn-amarillo">Nuevo Grupo</a>
        <a href="/nuevo-meeti" class="btn btn-azul">Nuevo Meeti</a>
        <a href="/editar-perfil" class="btn btn-rosa">Editar Perfil</a>
        <a href="/editar-password" class="btn btn-verde">Editar Contraseña</a>
        <a href="/imagen-perfil" class="btn btn-amarillo">Imagen Perfil</a>
    </div>

    <div class="seccion-admin">
        <h2>Proximos Meeti's</h2>
        <% if (meetis.length) { %>
            <ul>
                <% meetis.forEach(meeti => { %>
                    <li>
                        <div class="informacion-admin">
                            <% const fecha = meeti.fecha +' '+ meeti.hora %> 
                            <p class="fecha"><%= fecha %> </p>
                            <a href="/meeti/<%= meeti.slug %>" target="_blank">
                                <h3><%= meeti.titulo %> </h3>
                            </a>
                            <small><%= meeti.interesados.length %> Interesados</small>
                        </div>
                        <div class="acciones contenedor-botones">
                            <a href="/editar-meeti/<%= meeti.slug %>"  class="btn btn-verde">Editar</a>
                            <a href="/asistentes-meeti/<%= meeti.slug %>" class="btn btn-azul2">Ver Asistentes</a>
                            <a href="/eliminar-meeti/<%= meeti.slug %>" class="btn btn-rojo">Eliminar</a>
                        </div>
                    </li>
                <% }); %> 
            </ul>
        <% } else { %>
            <p>Aun no tienes Meeti's creados ¡Crea Uno!</p>
        <% } %> 
    </div>

    <div class="seccion-admin">
        <h2>Tus Grupos</h2>
        <% if(grupos.length) {  %>
        <ul>
            <% grupos.forEach(grupo => { %>
                <li>
                    <div class="informacion-admin">
                        <h3><%= grupo.nombre %></h3>
                    </div>
                    <div class="acciones contenedor-botones">
                        <a href="/editar-grupo/<%= grupo.id %>" class="btn btn-verde">Editar</a>
                        <a href="/imagen-grupo/<%= grupo.id %>" class="btn btn-azul2">Imagen</a>
                        <a href="/eliminar-grupo/<%= grupo.id %>" class="btn btn-rojo">Eliminar</a>
                    </div>
                </li>
            <% }) %> 
        </ul>
        <% } else { %>
            <p>No tienes grupos creados</p>
        <% } %>
    </div>

    <div class="seccion-admin">
        <h2>Meeti's Anteriores</h2>
        <% if (anteriores.length) { %>
            <ul>
                <% anteriores.forEach(meeti => { %>
                    <li>
                        <div class="informacion-admin">
                            <% const fecha = meeti.fecha +' '+ meeti.hora %> 
                            <p class="fecha"><%= fecha %> </p>
                            <a href="/meeti/<%= meeti.slug %>" target="_blank">
                                <h3><%= meeti.titulo %> </h3>
                            </a>
                            <small><%= meeti.interesados.length %> Interesados</small>
                        </div>
                        <div class="acciones contenedor-botones">
                            <a href="/editar-meeti/<%= meeti.slug %>"  class="btn btn-verde">Editar</a>
                            <a href="/asistentes-meeti/<%= meeti.slug %>" class="btn btn-azul2">Ver Asistentes</a>
                            <a href="/eliminar-meeti/<%= meeti.slug %>" class="btn btn-rojo">Eliminar</a>
                        </div>
                    </li>
                <% }); %> 
            </ul>
        <% } else { %>
            <p>No posees Meeti's Anteriores</p>
        <% } %> 
    </div>
</main>